<Context>

   <Resource name="jdbc/vegaDS" auth="Container"
             type="javax.sql.DataSource"
             driverClassName="org.hsqldb.jdbc.JDBCDriver"
             username="SA" password=""
             url="jdbc:hsqldb:hsql://localhost:9001/vega"
             initialSize="3"
             maxTotal="10"
             minIdle="2"
             maxIdle="7"
             maxWaitMillis="10000"
             logAbandoned="true"/>

   <Realm className="org.apache.catalina.realm.JDBCRealm"
          driverName="org.hsqldb.jdbc.JDBCDriver"
          connectionURL="jdbc:hsqldb:hsql://localhost:9001/vega;user=SA"
          userTable="vega_user" userNameCol="user_name" userCredCol="user_password"
          userRoleTable="vega_role" roleNameCol="role_name"
   >
      <CredentialHandler className="org.apache.catalina.realm.MessageDigestCredentialHandler" algorithm="sha-256"/>
   </Realm>

</Context>
