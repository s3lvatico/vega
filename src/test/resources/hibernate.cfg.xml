<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>

   <session-factory>
      <property name="hibernate.connection.driver_class">org.h2.Driver</property>
      <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/./vega</property>
      <property name="hibernate.connection.username">sa</property>
      <property name="hibernate.connection.password">sa</property>

      <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
      <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
      <property name="hibernate.show_sql">true</property>
      <property name="hibernate.format_sql">true</property>
      <property name="hibernate.use_sql_comments">true</property>

      <mapping class="org.gmnz.vega.integration.AllergeneEntity"/>
      <mapping class="org.gmnz.vega.integration.CategoriaEntity"/>
      <mapping class="org.gmnz.vega.integration.ReportEntity"/>
      <mapping class="org.gmnz.vega.integration.ReportDataEntity"/>
   </session-factory>

</hibernate-configuration>